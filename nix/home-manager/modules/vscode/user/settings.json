{
  /* ===== editor ===== */
  "editor.fontSize": 16,
  
  // フォント
  "editor.fontFamily": "'Moralerspace Neon'",

  // アクセシビリティ機能を無効化
  "editor.accessibilitySupport": "off",

  // カーソルがある行全体をハイライトする
  "editor.renderLineHighlight": "all",

  // 折りたたみコントロールを常に表示する
  "editor.showFoldingControls": "always",

  // 空白の可視化する
  "editor.renderWhitespace": "all",

  // 括弧の対応を色分けして表示する
  "editor.bracketPairColorization.enabled": true,

  // 括弧の対応をガイドで表示する
  "editor.guides.bracketPairs": true,

  // カーソルのアニメーション方式を変更する
  "editor.cursorBlinking": "expand",

  // カーソル移動時のアニメーションを滑らかにする
  "editor.cursorSmoothCaretAnimation": "on",

  // スクロール時のアニメーションを滑らかにする
  "editor.smoothScrolling": true,

  // 単語の分割を行うロケールを日本語にする
  "editor.wordSegmenterLocales": ["ja"],

  // 折り返し行のインデントが元の行のインデント+1になる
  "editor.wrappingIndent": "indent",

  // ミニマップの無効化
  "editor.minimap.enabled": false,

  /* ===== search ===== */
  "search.exclude": {
    "**/node_modules": true
  },

  /* ===== files ===== */
  // パフォーマンス最適化
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true
  },

  // ファイル末尾への自動改行挿入
  "files.insertFinalNewline": true,

  /* ===== terminal ===== */
  // ターミナル上のカーソルを点滅させる
  "terminal.integrated.cursorBlinking": true,

  // ターミナル上のカーソルの形状を変更する
  "terminal.integrated.cursorStyle": "line",
  
  // ターミナルで使用するFont Family
  "terminal.integrated.fontFamily": "'Moralerspace Neon'",
  
  // ターミナルで使用するFont Size
  "terminal.integrated.fontSize": 16,

  /* ===== workbench ===== */
  // カラーテーマの変更
  "workbench.colorTheme": "Catppuccin Frappé",

  "http.systemCertificatesNode": true
}
