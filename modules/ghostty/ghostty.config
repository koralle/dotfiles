# https://ghostty.org/docs/config

# テーマを変更すr
# 使用できるテーマは`ghostty +list-themes`を実行すると確認できる
theme = Catppuccin Frappe

# ターミナルで表示するフォントを変更する
font-family = "Moralerspace Neon"
font-size = 16

# カーソルについての変更
cursor-style = block
cursor-style-blink = true


background-opacity = 0.85
background-blur-radius = 20

# Macにおけるタイトルバーを非表示にする
macos-titlebar-style = hidden

# ウインドゥのレイアウト設定を変更する
window-padding-x = 10
window-padding-y = 5
window-padding-balance = true

# ウインドゥの色空間を変更する
window-colorspace = "display-p3"

# キーバインドを変更する
keybind = alt+.=toggle_fullscreen
